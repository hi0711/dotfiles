[user]
  name = hiroshi_sato
  email = h.sato@diamondhead.tech
[color]
  ui = auto
[push]
  default = current
[core]
  excludesfile = ~/.gitignore
  editor = nvim
  pager = LESSCHARSET=utf-8 less
  quotepath = false
[diff]
  tool = vimdiff
[merge]
  ff = false
  conflictsstyle = diff3
[mergetool]
  tool = vimdiff
[deff]
  renames = true
[branch]
  autosetuprebase = always
[alias]
  alias = !git config --get-regexp '^alias\\.' | sed 's/alias\\.\\([^ ]*\\) \\(.*\\)/\\1\\\t => \\2/' | sort
  mylog = log --graph --name-status --pretty=format:\"%C(red)%h %C(green)%an %Creset%s %C(yellow)%d%Creset\"
  ae = commit --allow-empty
  rb = rebase -i
  rb-r = rebase -r
  push-f = push --force-with-lease
  cb = rev-parse --abbrev-ref HEAD
  delete-merged-branch = "!f () { git checkout $1; git branch --merged|egrep -v '\\*|develop|master|stg|test'|xargs git branch -d; };f"
  delete-force = !CURRENT=`git branch --show-current | head -n 1` && git branch | egrep -v '\\*|master|stg|$CURRENT' | xargs -p -I % git branch -D %
  refresh= !git fetch origin && git remote prune origin
  brlog = !git --no-pager reflog | awk '$3 == \"checkout:\" && /moving from/ {print $8}' | uniq | head
  checkout-merge = !git checkout --conflict=merge
  ft-imp = !read BNAME && git branch --show-current | sed -e "s:$:--$BNAME:g" | xargs git checkout -b
[pull]
  ff = only
[filter "lfs"]
  clean = git-lfs clean %f
  smudge = git-lfs smudge %f
  required = true
[pager]
  log = diff-highlight | less
  show = diff-highlight | less
  diff = diff-highlight | less
[branch "master"]
  remote = origin
  merge = refs/heads/master
  rebase = true
[branch "develop"]
  remote = origin
  merge = refs/heads/develop
  rebase = true
[mergetool]
  path = nvim
[rebase]
  autosquash = true
[rerere]
  enabled = true
  autoupdate = true
[ghq]
  root = ~/workspace
[ghq "CODECOMMIT-URL"]
  vcs=git
